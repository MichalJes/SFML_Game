{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build only active file",
      "command": "C:/mingw32/bin/g++.exe",
      "args": [
        "-I",
        "${fileDirname}",
        "-I",
        "${fileDirname}\\SFML-2.5.1\\include",
        "-DSFML_STATIC",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-L",
        "${fileDirname}\\SFML-2.5.1\\lib",
        "-lsfml-graphics-s",
        "-lsfml-window-s",
        "-lsfml-system-s",
        "-lopengl32",
        "-lwinmm",
        "-lgdi32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:\\mingw32\\bin\\g++.exe"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build whole project",
      "command": "C:/mingw32/bin/g++.exe",
      "args": [
        "-I",
        "${fileDirname}",
        "-I",
        "${fileDirname}\\SFML-2.5.1\\include",
        "-DSFML_STATIC",
        "-g",
        "${fileDirname}\\**.cpp",
        "${fileDirname}\\**.h",
        "-o",
        "${fileDirname}\\main.exe",
        "-L",
        "${fileDirname}\\SFML-2.5.1\\lib",
        "-lsfml-graphics-s",
        "-lsfml-window-s",
        "-lsfml-system-s",
        "-lopengl32",
        "-lwinmm",
        "-lgdi32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:\\mingw32\\bin\\g++.exe"
    }
  ],
  "version": "2.0.0"
}